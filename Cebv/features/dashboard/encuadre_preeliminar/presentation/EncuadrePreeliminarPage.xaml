<Page x:Class="Cebv.features.dashboard.encuadre_preeliminar.presentation.EncuadrePreeliminarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:presentation="clr-namespace:Cebv.features.dashboard.encuadre_preeliminar.presentation"
      xmlns:util="clr-namespace:Cebv.core.util"
      xmlns:presentation1="clr-namespace:Cebv.features.formulario_cebv.condiciones_vulnerabilidad.presentation"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="auto"
      d:DesignHeight="auto"
      mc:Ignorable="d"
      Title="EncuadrePreeliminarPage">

    <Page.DataContext>
        <presentation:EncuadrePreeliminarViewModel />
    </Page.DataContext>

    <Page.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="Padding" Value="16" />
            <Setter Property="Background" Value="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ui:ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <util:VisibilityConverter x:Key="VisibilityConverter" />
        <util:VisibilityConverter2 x:Key="VisibilityConverter2" />
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ui:TextBlock Grid.Column="0" 
                          Text="{StaticResource EncuadreTitle}" FontTypography="TitleLarge"/>
            <ui:Button Grid.Column="1"
                       HorizontalAlignment="Right"
                       Content="Guardar reporte"
                       Icon="{ui:SymbolIcon Save24}"
                       Appearance="Primary"
                       Command="{Binding GuardarReporteCommand}"/>
        </Grid>

        <StackPanel Grid.Row="1" Margin="10">
            <ui:TextBlock Text="Inicio" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <WrapPanel Margin="5">
                    <StackPanel MinWidth="250" Margin="0 0 25 0">
                        <ui:TextBlock Text="MEDIO DE CONOCIMIENTO GENÉRICO: *" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding TipoMedioSelected}"
                                  ItemsSource="{Binding TiposMedios}" />
                    </StackPanel>

                    <StackPanel MinWidth="250" Margin="0 0 25 0">
                        <ui:TextBlock Text="MEDIO DE CONOCIMIENTO ESPECÍFICO: *" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding Reporte.MedioConocimiento}"
                                  ItemsSource="{Binding Medios}" />
                    </StackPanel>
                </WrapPanel>
            </Border>

            <ui:TextBlock Text="Reportante" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <StackPanel Margin="5">
                    <!-- Nombre Completo -->
                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NOMBRE(S):  *" />
                            <ui:TextBox Text="{Binding Reportante.Persona.Nombre}" />
                        </StackPanel>


                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="PRIMER APELLIDO: *" />
                            <ui:TextBox Text="{Binding Reportante.Persona.ApellidoPaterno}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="SEGUNDO APELLIDO:" />
                            <ui:TextBox Text="{Binding Reportante.Persona.ApellidoMaterno}" />
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin=" 0 0 0 15">
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="SEXO:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding Reportante.Persona.Sexo}"
                                      ItemsSource="{Binding Sexos}" />
                        </StackPanel>

                        <StackPanel MinWidth="250">
                            <ui:TextBlock Text="¿USTED QUE ES DE LA PERSONA DESAPARECIDA O NO LOCALIZADA?" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding Reportante.Parentesco}"
                                      ItemsSource="{Binding Parentescos}" />
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="TELÉFONO MÓVIL: *" />
                            <ui:TextBox ClearButtonEnabled="True"
                                        Text="{Binding NoTelefonoReportante}"/>
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="COMPAÑÍA:" />
                            <ComboBox ItemsSource="{Binding CompaniasTelefonicas}"
                                      SelectedItem="{Binding CompañiaTelefonicaReportanteSelected}"
                                      DisplayMemberPath="Nombre"/>
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="OBSERVACIONES:" />
                            <ui:TextBox ClearButtonEnabled="True"
                                        Text="{Binding ObservacionesTelefonoReportante}"/>
                        </StackPanel>

                        <ui:Button Content="Añadir otro  teléfono móvil"
                                   Appearance="Primary"
                                   Margin="0 15 0 0"
                                   Icon="{ui:SymbolIcon Add24}"
                                   Command="{Binding AddTelefonoMovilReportanteCommand}"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <ui:TextBlock Text="Desaparecido" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <StackPanel Margin="5">
                    <!-- Nombre Completo -->
                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NOMBRE(S):  *" />
                            <ui:TextBox Text="{Binding Desaparecido.Persona.Nombre}" />
                        </StackPanel>


                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="PRIMER APELLIDO: *" />
                            <ui:TextBox Text="{Binding Desaparecido.Persona.ApellidoPaterno}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="SEGUNDO APELLIDO:" />
                            <ui:TextBox Text="{Binding Desaparecido.Persona.ApellidoMaterno}" />
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel>
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="SEXO:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding Desaparecido.Persona.Sexo}"
                                      ItemsSource="{Binding Sexos}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NACIONALIDAD: *" />
                            <ComboBox Width="250"
                                      IsEditable="True"
                                      DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding Desaparecido.Persona.Nacionalidades[0]}"
                                      ItemsSource="{Binding Nacionalidades}" />
                        </StackPanel>
                    </WrapPanel>

                    <ui:ToggleSwitch Margin="0 15 0 0"
                                     OnContent="¿SE DESCONOCE FECHA EXACTA? Sí"
                                     OffContent="¿SE DESCONOCE FECHA EXACTA? No"
                                     IsChecked="{Binding SeConoceFechaNacimientoDesaparecido}"/>

                    <!-- Fecha exacta -->
                    <StackPanel Margin="0 15 0 15"
                                Visibility="{Binding SeConoceFechaNacimientoDesaparecido,
                                    Converter={StaticResource VisibilityConverter}}">
                        <WrapPanel>
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="FECHA DE NACIMIENTO ESPECÍFICA:" />
                                <DatePicker IsTodayHighlighted="True"
                                            SelectedDate="{Binding Desaparecido.Persona.FechaNacimiento}"/>
                            </StackPanel>
                        </WrapPanel>

                        <ui:TextBlock Text="Edad al momento de la Desaparición" FontTypography="BodyStrong"
                                      Margin="0 25 0 10" />
                        <WrapPanel IsEnabled="False">
                            <StackPanel MinWidth="200" Margin="0 0 25 0">
                                <ui:TextBlock Text="EDAD(AÑOS):" />
                                <ui:NumberBox
                                    Icon="{ui:SymbolIcon NumberSymbolSquare24}"
                                    MaxDecimalPlaces="0"
                                    Maximum="120"
                                    Minimum="0"
                                    PlaceholderText="Años"
                                    SmallChange="1" />
                            </StackPanel>

                            <StackPanel MinWidth="200" Margin="0 0 25 0">
                                <ui:TextBlock Text="EDAD(MESES):" />
                                <ui:NumberBox
                                    Icon="{ui:SymbolIcon NumberSymbolSquare24}"
                                    MaxDecimalPlaces="0"
                                    Maximum="12"
                                    Minimum="0"
                                    PlaceholderText="Meses"
                                    SmallChange="1" />
                            </StackPanel>

                            <StackPanel MinWidth="200">
                                <ui:TextBlock Text="EDAD(DÍAS):" />
                                <ui:NumberBox
                                    Icon="{ui:SymbolIcon NumberSymbolSquare24}"
                                    MaxDecimalPlaces="0"
                                    Maximum="31"
                                    Minimum="0"
                                    PlaceholderText="Días"
                                    SmallChange="1" />
                            </StackPanel>
                        </WrapPanel>

                       
                    </StackPanel>

                    <!-- Fecha aproximada -->
                    <StackPanel Margin="0 15 0 15"
                                Visibility="{Binding SeConoceFechaNacimientoDesaparecido,
                                    Converter={StaticResource VisibilityConverter2}}">
                        <WrapPanel>
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="FECHA DE NACIMIENTO APROXIMADA:" />
                                <DatePicker IsTodayHighlighted="True" />
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="FECHA DE NACIMIENTO CEBV:" />
                                <ui:TextBox />
                            </StackPanel>

                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="OBSERVACIONES SOBRE LA FECHA:" />
                                <ui:TextBox />
                            </StackPanel>
                        </WrapPanel>

                        <ui:TextBlock Text="Edad al momento de la Desaparición" FontTypography="BodyStrong"
                                      Margin="0 25 0 10" />
                        <WrapPanel>
                            <StackPanel MinWidth="200" Margin="0 0 25 0">
                                <ui:TextBlock Text="EDAD(AÑOS):" />
                                <ui:NumberBox
                                    Icon="{ui:SymbolIcon NumberSymbolSquare24}"
                                    MaxDecimalPlaces="0"
                                    Maximum="120"
                                    Minimum="0"
                                    PlaceholderText="Años"
                                    SmallChange="1" />
                            </StackPanel>

                            <StackPanel MinWidth="200" Margin="0 0 25 0">
                                <ui:TextBlock Text="EDAD(MESES):" />
                                <ui:NumberBox
                                    Icon="{ui:SymbolIcon NumberSymbolSquare24}"
                                    MaxDecimalPlaces="0"
                                    Maximum="12"
                                    Minimum="0"
                                    PlaceholderText="Meses"
                                    SmallChange="1" />
                            </StackPanel>

                            <StackPanel MinWidth="200">
                                <ui:TextBlock Text="EDAD(DÍAS):" />
                                <ui:NumberBox
                                    Icon="{ui:SymbolIcon NumberSymbolSquare24}"
                                    MaxDecimalPlaces="0"
                                    Maximum="31"
                                    Minimum="0"
                                    PlaceholderText="Días"
                                    SmallChange="1" />
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>

                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="TELÉFONO MÓVIL: *" />
                            <ui:TextBox ClearButtonEnabled="True"
                                        Text="{Binding NoTelefonoDesaparecido}"/>
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="COMPAÑÍA:" />
                            <ComboBox ItemsSource="{Binding CompaniasTelefonicas}"
                                      DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding CompañiaTelefonicaDesaparecidoSelected}"/>
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="OBSERVACIONES:" />
                            <ui:TextBox ClearButtonEnabled="True"
                                        Text="{Binding ObservacionesTelefonoDesaparecido}"/>
                        </StackPanel>

                        <ui:Button Content="Añadir otro  teléfono móvil"
                                   Appearance="Primary"
                                   Margin="0 15 0 0"
                                   Icon="{ui:SymbolIcon Add24}"
                                   Command="{Binding  AddTelefonoMovilDesaparecidoCommand}"/>
                    </WrapPanel>

                    <StackPanel MinWidth="250">
                        <ui:TextBlock Text="CURP:" />
                        <ui:TextBox Text="{Binding Desaparecido.Persona.Curp}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <ui:TextBlock Text="Circunstancia, tiempo y lugar" FontTypography="Title" Margin="10" />
            <ui:ToggleSwitch Margin="25 15 0 15"
                             OnContent="¿SE DESCONOCE FECHA EXACTA? Sí"
                             OffContent="¿SE DESCONOCE FECHA EXACTA? No"
                             IsChecked="{Binding SeConoceFechaExactaHechos}" />

            <Border>
                <StackPanel Margin="5">
                    <StackPanel
                        Visibility="{Binding SeConoceFechaExactaHechos,
                    Converter={StaticResource VisibilityConverter}}">

                        <StackPanel Margin="5">
                            <WrapPanel Margin="0 0 0 15">
                                <StackPanel MinWidth="300" Margin="0 0 25 0">
                                    <ui:TextBlock Text="FECHA DESAPARICIÓN: *" />
                                    <DatePicker IsTodayHighlighted="True"
                                                SelectedDate="{Binding Reporte.HechosDesaparicion.FechaDesaparicion}"/>
                                </StackPanel>

                                <StackPanel MinWidth="250">
                                    <ui:TextBlock Text="HORA DESAPARICIÓN:" />
                                    <ui:TextBox Icon="{ui:SymbolIcon Clock24}"
                                                Text="{Binding Reporte.HechosDesaparicion.FechaDesaparicion.TimeOfDay}"/>
                                </StackPanel>
                            </WrapPanel>

                            <StackPanel>
                                <ui:TextBlock Text="ACLARACIÓN DE LA FECHA Y HORA DE LOS HECHOS:" />
                                <ui:TextBox TextWrapping="Wrap" AcceptsReturn="True"
                                            Text="{Binding Reporte.HechosDesaparicion.AclaracionesFechaHechos}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Visibility="{Binding SeConoceFechaExactaHechos,
                Converter={StaticResource VisibilityConverter2}}">
                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="300" Margin="0 0 25 0">
                                <ui:TextBlock Text="FECHA DESAPARICIÓN APROXIMADA: *" />
                                <DatePicker IsTodayHighlighted="True" />
                            </StackPanel>

                            <StackPanel MinWidth="300" Margin="0 0 25 0">
                                <ui:TextBlock Text="FECHA DESAPARICIÓN CEBV:" />
                                <ui:TextBox />
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="HORA DESAPARICIÓN:" />
                                <ui:TextBox Icon="{ui:SymbolIcon Clock24}" />
                            </StackPanel>
                        </WrapPanel>

                        <StackPanel>
                            <ui:TextBlock Text="ACLARACIÓN DE LA FECHA Y HORA DE LOS HECHOS:" />
                            <ui:TextBox TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0 0 0 15">
                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="CALLE:" />
                                <ui:TextBox ClearButtonEnabled="True"
                                            Text="{Binding Reporte.HechosDesaparicion.LugarHechos.Calle}"/>
                            </StackPanel>

                            <StackPanel MinWidth="200" Margin="0 0 25 0">
                                <ui:TextBlock Text="N° EXTERIOR:" />
                                <ui:TextBox ClearButtonEnabled="True"
                                            Text="{Binding Reporte.HechosDesaparicion.LugarHechos.NumeroExterior}"/>
                            </StackPanel>

                            <StackPanel MinWidth="200" Margin="0 0 25 0">
                                <ui:TextBlock Text="N° INTERIOR:" />
                                <ui:TextBox ClearButtonEnabled="True"
                                            Text="{Binding Reporte.HechosDesaparicion.LugarHechos.NumeroInterior}"/>
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="COLONIA:" />
                                <ui:TextBox ClearButtonEnabled="True"
                                            Text="{Binding Reporte.HechosDesaparicion.LugarHechos.Colonia}"/>
                            </StackPanel>

                            <StackPanel MinWidth="200">
                                <ui:TextBlock Text="CÓDIGO POSTAL:" />
                                <ui:TextBox ClearButtonEnabled="True"
                                            Text="{Binding Reporte.HechosDesaparicion.LugarHechos.CodigoPostal}"/>
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="ESTADO:" />
                                <ComboBox DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding EstadoSelected}"
                                          ItemsSource="{Binding Estados}" />
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="MUNICIPIO: *" />
                                <ComboBox SelectedItem="{Binding MunicipioSelected}"
                                          ItemsSource="{Binding Municipios}"
                                          IsTextSearchEnabled="True">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <WrapPanel>
                                                <TextBlock Text="{Binding Id}"/>
                                                <TextBlock Text=" - "/>
                                                <TextBlock Text="{Binding Nombre}"/>
                                            </WrapPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="LOCALIDAD:" />
                                <ComboBox IsTextSearchEnabled="True"
                                          DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding Reporte.HechosDesaparicion.LugarHechos.Asentamiento}"
                                          ItemsSource="{Binding Asentamientos}" />
                            </StackPanel>

                            <StackPanel MinWidth="200" IsEnabled="False" Margin="0 0 25 0" Visibility="Collapsed">
                                <ui:TextBlock Text="LONGITUD:" />
                                <ui:TextBox Text="{Binding Asentamiento.Longitud}" />
                            </StackPanel>

                            <StackPanel MinWidth="200" IsEnabled="False" Visibility="Collapsed">
                                <ui:TextBlock Text="LATITUD:" />
                                <ui:TextBox Text="{Binding Asentamiento.Latitud}" />
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="ENTRE CALLE 1:" />
                                <ui:TextBox Text="{Binding Reporte.HechosDesaparicion.LugarHechos.Calle1}"/>
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="ENTRE CALLE 2:" />
                                <ui:TextBox Text="{Binding Reporte.HechosDesaparicion.LugarHechos.Calle2}"/>
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="TRAMO CARRETERO:" />
                                <ui:TextBox Text="{Binding Reporte.HechosDesaparicion.LugarHechos.TramoCarretero}"/>
                            </StackPanel>
                        </WrapPanel>

                        <StackPanel MinWidth="250">
                            <ui:TextBlock Text="REFERENCIA:" />
                            <ui:TextBox Text="{Binding Reporte.HechosDesaparicion.LugarHechos.Referencia}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0 0 0 15">
                        <ui:TextBlock Text="CIRCUNSTANCIAS DE LA DESAPARICIÓN: *" />
                        <ui:TextBox TextWrapping="Wrap" AcceptsReturn="True" MinHeight="150"
                                    Text="{Binding Reporte.HechosDesaparicion.HechosDesaparicion}"/>
                    </StackPanel>

                    <StackPanel MinWidth="300">
                        <ui:TextBlock Text="N° DE PERSONAS EN EL MISMO EVENTO" />
                        <ui:NumberBox Value="1"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <ui:TextBlock Text="Media filiación" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <StackPanel Margin="5">
                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="ESTATURA:" />
                            <ui:NumberBox Icon="{ui:SymbolIcon Ruler24}"
                                          MaxDecimalPlaces="0"
                                          Maximum="250"
                                          Minimum="30"
                                          PlaceholderText="Centímetros"
                                          SmallChange="1" />
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="COMPLEXIÓN:" />
                            <ComboBox />
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="COLOR DE PIEL:" />
                            <ComboBox />
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="COLOR DE OJOS:" />
                            <ComboBox />
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel>
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="COLOR CABELLO:" />
                            <ComboBox />
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="TAMAÑO CABELLO:" />
                            <ComboBox />
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="TIPO CABELLO:" />
                            <ComboBox />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <ui:TextBlock Text="Señas particulares" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TextBlock Grid.Row="0" Text="{StaticResource SenasParticularesTitle}" FontTypography="TitleLarge" />

        <StackPanel Grid.Row="1" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Grid.Column="0"
                      Margin="10"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      MaxWidth="500">

                    <ui:Image Source="/core/resources/images/senas/Cuerpo MapingSide.png"
                              x:Name="LadoImage"
                              CornerRadius="8"
                              Stretch="Uniform" />

                    <ui:Image Source="/core/resources/images/senas/RegionCuerpoColorMejorado.png"
                              x:Name="RegionCuerpoImage"
                              CornerRadius="8"
                              Stretch="Uniform" />

                    <ui:Image Source="/core/resources/images/senas/CuerpoUNIXMejorado.png"
                              CornerRadius="8"
                              BorderBrush="#000000"
                              Stretch="Uniform" />
                </Grid>

                <Grid Grid.Row="0"
                      Grid.Column="1"
                      Grid.ColumnSpan="2">
                    <StackPanel>
                        <!-- Tipo de seña -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <!-- Region cuerpo -->
                                <ui:TextBlock Text="Región del cuerpo:"
                                              Margin="10,10,0,0" />
                                <ComboBox Margin="5,0,5,0"
                                          DisplayMemberPath="Nombre"
                                          SelectedValue="{Binding RegionCuerpoSelected}"
                                          ItemsSource="{Binding RegionesCuerpo}"/>
                                
                                <!-- Vista -->
                                <ui:TextBlock Text="Vista:"
                                              Margin="10,10,0,0" />
                                <ComboBox Margin="5,0,5,0"
                                          DisplayMemberPath="Nombre"
                                          SelectedValue="{Binding VistaSelected}"
                                          ItemsSource="{Binding Vistas}" />

                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <ui:TextBlock Text="Lado:"
                                              Margin="10,10,0,0" />
                                <ComboBox Margin="5,0,5,0"
                                          DisplayMemberPath="Nombre"
                                          SelectedValue="{Binding LadoSelected}"
                                          ItemsSource="{Binding Lados}" />

                                <!-- Cantidad -->
                                <ui:TextBlock Text="Cantidad:"
                                              Margin="10,10,0,0" />
                                <ui:NumberBox Margin="5,0,5,0"
                                              Value="{Binding Cantidad}"
                                              Tag="Number"/>

                            </StackPanel>
                        </Grid>
                        
                        <ui:TextBlock Text="Tipo de seña:"
                                      Margin="10,10,0,0" />
                        <ComboBox Margin="5,0,5,0"
                                  DisplayMemberPath="Nombre"
                                  SelectedValue="{Binding TipoSelected}"
                                  ItemsSource="{Binding Tipos}" />

                        
                        <!-- Descripcion -->
                        <ui:TextBlock Text="Descripción:"
                                      Margin="10,10,0,0" />
                        <TextBox Margin="10"
                                 VerticalAlignment="Stretch"
                                 Height="100"
                                 Text="{Binding Descripcion}"
                                 TextWrapping="Wrap" />

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="10">
                            <ui:Button Content="Eliminar"
                                       Margin="5,0,0,0"
                                       Icon="{ui:SymbolIcon Delete24}"
                                       Appearance="Danger" />
                            <ui:Button Content="Subir imagen"
                                       Margin="5,0,0,0"
                                       Icon="{ui:SymbolIcon ArrowUpload24}" />
                            <ui:Button Content="Agregar registro"
                                       Margin="5,0,0,0"
                                       Command="{Binding AddSenaParticularCommand}"
                                       Icon="{ui:SymbolIcon Add24}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <DataGrid Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="3"
                          Margin="10,0,10,10"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Desaparecido.Persona.SenasParticulares}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Region del cuerpo"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding RegionCuerpo.Nombre}" />
                        <DataGridTextColumn Header="Vista"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Vista.Nombre}" />
                        <DataGridTextColumn Header="Lado"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Lado.Nombre}" />
                        <DataGridTextColumn Header="Tipo"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Tipo.Nombre}" />
                        <DataGridTextColumn Header="Cantidad"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Cantidad}" />
                        <DataGridTextColumn Header="Descripcion"
                                            CanUserResize="False"
                                            Width="3*"
                                            Binding="{Binding Descripcion}" />
                        <DataGridTextColumn Header="Fotografia"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Foto}"/>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button Icon="{ui:SymbolIcon Delete24}"
                                               Appearance="Danger"
                                               Margin="3"
                                               Command="{Binding ElementName=Page, Path=DataContext.DeleteSenaParticularCommand}"
                                               CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </StackPanel>
    </Grid>
            </Border>

            <ui:TextBlock Text="Vestimenta" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <ui:TextBlock Grid.Row="0" Text="{StaticResource PrendasVestirTitle}" FontTypography="TitleLarge" />

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="10">
            <Border Style="{StaticResource CebvBorder}">
                <UniformGrid Columns="2">
                    <StackPanel Margin="5">
                        <StackPanel Margin="0 0 0 15">
                            <ui:TextBlock Text="Grupo pertenencia:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding GrupoPertenencia }"
                                      ItemsSource="{Binding GruposPertenencias}" />
                        </StackPanel>

                        <StackPanel Margin="0 0 0 15">
                            <ui:TextBlock Text="Pertenencia:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding Pertenencia }"
                                      ItemsSource="{Binding Pertenencias}" />
                        </StackPanel>

                        <StackPanel>
                            <ui:TextBlock Text="Color:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding Color }"
                                      ItemsSource="{Binding Colores}" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <StackPanel Margin="0 0 0 15">
                            <ui:TextBlock Text="Marca:" />
                            <ui:TextBox Text="{Binding Marca}" />
                        </StackPanel>

                        <StackPanel>
                            <ui:TextBlock Text="Descripción:" />
                            <ui:TextBox Text="{Binding Descripcion}"
                                        TextWrapping="Wrap"
                                        MinHeight="100"
                                        AcceptsReturn="True" />
                        </StackPanel>
                        
                        <!-- Botones de edición -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                    Visibility="{Binding ModoEdicion,
                                            Converter={StaticResource VisibilityConverter2}}"
                                    Margin="10">
                            <ui:Button VerticalAlignment="Stretch"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Dismiss24 }"
                                       MinWidth="50"
                                       Margin="5"
                                       Command="{Binding CancelarEdicionCommand}"
                                       CommandParameter="{Binding}" />

                            <ui:Button VerticalAlignment="Stretch"
                                       Appearance="Primary"
                                       Icon="{ui:SymbolIcon Checkmark24}"
                                       MinWidth="50"
                                       Margin="5"
                                       Command="{Binding ConfirmarEdicionCommand}"
                                       CommandParameter="{Binding}" />
                        </StackPanel>

                        <ui:Button
                            Visibility="{Binding ModoEdicion,
                               Converter={StaticResource VisibilityConverter}}"
                            Content="Añadir"
                            Margin="10"
                            HorizontalAlignment="Right"
                            Command="{Binding AddPrendaCommand}"
                            Icon="{ui:SymbolIcon Add24}"
                            Appearance="Success" />
                    </StackPanel>
                </UniformGrid>
            </Border>

            <ui:CardExpander Icon="{ui:SymbolIcon Tag24}" Margin="0 0 0 15">
                <ui:CardExpander.Header>
                    <ui:TextBlock Text="Prendas" FontTypography="Subtitle" />
                </ui:CardExpander.Header>

                <ui:ListView
                    HorizontalAlignment="Stretch"
                    MaxHeight="250"
                    ItemsSource="{Binding Prendas, Mode=TwoWay}"
                    SelectionMode="Single">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <ui:CardControl
                                    Margin="5 5 120 5"
                                    Padding="10"
                                    Icon="{ui:SymbolIcon Tag24}"
                                    HorizontalAlignment="Stretch">
                                    <ui:CardControl.Header>
                                        <StackPanel>
                                            <ui:TextBlock
                                                Appearance="Secondary"
                                                Text="{Binding GrupoPertenencia.Nombre}"
                                                TextWrapping="Wrap" />

                                            <StackPanel Orientation="Horizontal">
                                                <ui:TextBlock
                                                    Margin="0 0 10 0"
                                                    FontTypography="Subtitle"
                                                    Text="{Binding Pertenencia.Nombre}"
                                                    TextWrapping="Wrap" />

                                                <ui:TextBlock
                                                    Appearance="Secondary"
                                                    FontTypography="Subtitle"
                                                    Text="{Binding Color.Nombre}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>

                                            <ui:TextBlock
                                                Appearance="Secondary"
                                                Text="{Binding Marca}"
                                                TextWrapping="WrapWithOverflow" />
                                        </StackPanel>

                                    </ui:CardControl.Header>
                                    <StackPanel>
                                        <ui:TextBlock
                                            Appearance="Tertiary"
                                            Text="{Binding Descripcion}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </ui:CardControl>
                                
                                <!-- Botones de visualización -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                            Visibility="{Binding DataContext.ModoEdicion,
                                            RelativeSource={RelativeSource AncestorType=ListView},
                                            Converter={StaticResource VisibilityConverter}}">
                                    <ui:Button VerticalAlignment="Stretch"
                                               Appearance="Success"
                                               Icon="{ui:SymbolIcon Edit24}"
                                               MinWidth="50"
                                               Margin="5"
                                               Command="{Binding DataContext.ModoEdicionCommand , RelativeSource={RelativeSource AncestorType=ListView}}"
                                               CommandParameter="{Binding}" />

                                    <ui:Button VerticalAlignment="Stretch"
                                               Appearance="Danger"
                                               Icon="{ui:SymbolIcon Delete24}"
                                               MinWidth="50"
                                               Margin="5"
                                               Command="{Binding DataContext.RemovePrendaCommand , RelativeSource={RelativeSource AncestorType=ListView}}"
                                               CommandParameter="{Binding}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </ui:CardExpander>
        </StackPanel>
    </Grid>
            </Border>

            <ui:TextBlock Text="Fotografías" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <StackPanel Margin="5">
                    <ui:Button Icon="{ui:SymbolIcon Attach24}"
                               Content="Añadir imagenes"
                               Margin="0 0 0 25" />

                    <WrapPanel>
                        <ui:Button Icon="{ui:SymbolIcon Image24}"
                                   MinHeight="100"
                                   MinWidth="200"
                                   Margin="10" />

                        <ui:Button Icon="{ui:SymbolIcon Image24}"
                                   MinHeight="100"
                                   MinWidth="200"
                                   Margin="10" />

                        <ui:Button Icon="{ui:SymbolIcon Image24}"
                                   MinHeight="100"
                                   MinWidth="200"
                                   Margin="10" />
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>