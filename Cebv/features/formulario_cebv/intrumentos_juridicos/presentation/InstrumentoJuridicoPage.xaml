<Page x:Class="Cebv.features.formulario_cebv.intrumentos_juridicos.presentation.InstrumentoJuridicoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:util="clr-namespace:Cebv.core.util"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="1000"
      d:DesignHeight="auto"
      mc:Ignorable="d"
      Title="InstrumentoJuridicoPage">
    
    <Page.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="Padding" Value="16" />
            <Setter Property="Background" Value="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ui:ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <util:VisibilityConverter2 x:Key="VisibilityConverter" />
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height=".5*" />
        </Grid.RowDefinitions>
        <ui:TextBlock Grid.Row="0" Text="{StaticResource InstrumentoJuridicoTitle}" FontTypography="TitleLarge" />

        <StackPanel Grid.Row="1" Margin="10">
            <!-- Información de la carpeta de investigación -->
            <ui:TextBlock Text="Carpeta de investigación" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <StackPanel>
                    <StackPanel>
                        <ui:TextBlock Text="ESPECÍFICA SI HAY O EXISTE CARPETA DE INVESTIGACIÓN (CI). " />
                        <ComboBox SelectedItem="{Binding CarpetaInvestigacionSelected}"
                                  ItemsSource="{Binding CarpetaInvestigacionList}" />
                    </StackPanel>

                    <WrapPanel Margin="0 25 0 0"
                               Visibility="{Binding CarpetaInvestigacion,
                               Converter={StaticResource VisibilityConverter}}">
                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NÚMERO DE CI, IM O REPORTE DE FGE:" />
                            <ui:TextBox Text="{Binding NumeroCi}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="DÓNDE RADICA LA CI, IM O REPORTE DE FGE:" />
                            <ui:TextBox Text="{Binding DondeRadicaCi}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NOMBRE DEL SERVIDOR(A) PÚBLICO:" />
                            <ui:TextBox Text="{Binding NombreServidorPublicoCi}" />
                        </StackPanel>

                        <StackPanel MinWidth="250">
                            <ui:TextBlock Text="FECHA DE RECEPCIÓN DE CI, IM O REPORTE DE FGE:" />
                            <DatePicker IsTodayHighlighted="True"
                                        SelectedDate="{Binding FechaRecepcionCi}" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Información de amparo de buscador -->
            <ui:TextBlock Text="Amparo de buscador" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <StackPanel>
                    <StackPanel>
                        <ui:TextBlock Text="ESPECÍFICA SI HAY O EXISTE AMPARO BUSCADOR" />
                        <ComboBox SelectedItem="{Binding AmparoBuscadorSelected}"
                                  ItemsSource="{Binding AmparoBuscadorList}" />
                    </StackPanel>

                    <WrapPanel Margin="0 25 0 0"
                               Visibility="{Binding AmparoBuscador,
                               Converter={StaticResource VisibilityConverter}}">

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NÚMERO DE AMPARO BUSCADOR:" />
                            <ui:TextBox Text="{Binding NumeroAmparo}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="DÓNDE RADICA EL AMPARO BUSCADOR:" />
                            <ui:TextBox Text="{Binding DondeRadicaAmparo}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NOMBRE DEL JUEZ:" />
                            <ui:TextBox Text="{Binding NombreJuez}" />
                        </StackPanel>

                        <StackPanel MinWidth="250">
                            <ui:TextBlock Text="FECHA DE RECEPCIÓN:" />
                            <DatePicker IsTodayHighlighted="True"
                                        SelectedDate="{Binding FechaRecepcionAb}" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Recomendacion de derechos humanos -->
            <ui:TextBlock Text="Recomendación de Derechos Humanos" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <StackPanel>
                    <StackPanel>
                        <ui:TextBlock Text="ESPECÍFICA SI HAY O EXISTE RECOMENDACIÓN DE DERECHOS HUMANOS (DH)" />
                        <ComboBox SelectedItem="{Binding DerechosHumanosSelected}"
                                  ItemsSource="{Binding DerechosHumanosList}" />
                    </StackPanel>

                    <WrapPanel Margin="0 25 0 0"
                               Visibility="{Binding DerechosHumanos,
                               Converter={StaticResource VisibilityConverter}}">

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NÚMERO DE RECOMENDACIÓN DERECHOS HUMANOS:" />
                            <ui:TextBox Text="{Binding NumeroDerechosHumanos}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="DÓNDE RADICA LA RECOMENDACIÓN DERECHOS HUMANOS:"
                                          FontTypography="Caption" />
                            <ui:TextBox Text="{Binding DondeRadicaDh}" />
                        </StackPanel>

                        <StackPanel MinWidth="250" Margin="0 0 25 0">
                            <ui:TextBlock Text="NOMBRE DEL SERVIDOR(A) PÚBLICO:" />
                            <ui:TextBox Text="{Binding NombreServidorPublicoDh}" />
                        </StackPanel>

                        <StackPanel MinWidth="250">
                            <ui:TextBlock Text="FECHA DE RECEPCIÓN RECOMENDACIÓN DH:" />
                            <DatePicker IsTodayHighlighted="True"
                                        SelectedDate="{Binding FechaRecepcionDh}" />
                        </StackPanel>
                    </WrapPanel>

                    <StackPanel Margin="0 15 0 0">
                        <CheckBox Content="DECLARACIÓN ESPECIAL DE AUSENCIA." Margin="0 0 0 15"
                                  IsChecked="{Binding DeclaracionEspecialAusencia}" />

                        <CheckBox Content="ACCIÓN URGENTE." Margin="0 0 0 15"
                                  IsChecked="{Binding AccionUrgente}" />

                        <CheckBox Content="DICTAMEN" Margin="0 0 0 15"
                                  IsChecked="{Binding Dictamen}" />

                        <CheckBox Content="CARPETA DE INVESTIGACIÓN A NIVEL FEDERAL." Margin="0 0 0 15"
                                  IsChecked="{Binding CarpetaInvestigacionNivelFederal}" />

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="OTRO, ESPECÍFIQUE:" Margin="0 0 15 0"
                                      IsChecked="{Binding OtroDerechoHumano}" />

                            <ui:TextBox MinWidth="250"
                                        IsEnabled="{Binding OtroDerechoHumano}"
                                        Text="{Binding OtroDerechoHumanoEspecificado}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <ui:Button Grid.Row="2"
                   Command="{Binding GuardarReporteCommand}"
                   Content="{StaticResource GuardarContinuar}"
                   Icon="{ui:SymbolIcon Save24}"
                   Margin="10"
                   HorizontalAlignment="Stretch"
                   Appearance="Primary" />
    </Grid>
</Page>
