<Page x:Class="Cebv.features.formulario_cebv.media_filiacion.presentation.MediaFiliacionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="Auto"
      d:DesignHeight="Auto"
      mc:Ignorable="d"
      Title="MediaFiliacionPage">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <ui:TextBlock Grid.Row="0" Text="{StaticResource MediaFiliacionTitle}" FontTypography="TitleLarge" />

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="10">

            <ui:TextBlock Text="Perfil corporal" FontTypography="Title" Margin="10" />
            <Border Style="{StaticResource CebvBorder}" Margin="0 0 0 25">
                <WrapPanel Margin="5">
                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="ESTATURA:" />
                        <ui:NumberBox Icon="{ui:SymbolIcon Ruler24}"
                                      MaxDecimalPlaces="0"
                                      Maximum="250"
                                      Minimum="30"
                                      PlaceholderText="Centímetros"
                                      SmallChange="1" />
                    </StackPanel>

                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="PESO:" />
                        <ui:NumberBox Icon="{ui:SymbolIcon Scales24}"
                                      MaxDecimalPlaces="2"
                                      Maximum="200"
                                      Minimum="1"
                                      PlaceholderText="Kilogramos"
                                      SmallChange=".1" />
                    </StackPanel>

                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="COMPLEXIÓN:" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding Complexion}"
                                  ItemsSource="{Binding Complexiones}"/>
                    </StackPanel>

                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="COLOR DE PIEL:" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding ColorPiel}"
                                  ItemsSource="{Binding ColoresPieles}"/>
                    </StackPanel>

                    <StackPanel MinWidth="200">
                        <ui:TextBlock Text="FORMA DE LA CARA:" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding FormaCara}"
                                  ItemsSource="{Binding FormasCaras}"/>
                    </StackPanel>
                </WrapPanel>
            </Border>

            <ui:TextBlock Text="Ojos" FontTypography="Title" Margin="10" />
            <Border Style="{StaticResource CebvBorder}" Margin="0 0 0 25">
                <StackPanel Margin="5">
                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="COLOR DE OJOS:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding ColorOjo}"
                                      ItemsSource="{Binding ColoresOjos}"/>
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="FORMA DE OJOS:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding FormaOjo}"
                                      ItemsSource="{Binding FormasOjos}"/>
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="TAMAÑO DE OJOS:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding TamanoOjo}"
                                      ItemsSource="{Binding TamanosOjos}"/>
                        </StackPanel>
                    </WrapPanel>

                    <StackPanel>
                        <ui:TextBlock Text="OTRA ESPECIFICACIÓN DE OJOS:" />
                        <ui:TextBox Text="{Binding DescripcionOjos}"
                                    TextWrapping="Wrap" AcceptsReturn="True" />
                    </StackPanel>

                </StackPanel>
            </Border>

            <ui:TextBlock Text="Cabello" FontTypography="Title" Margin="10" />
            <Border Style="{StaticResource CebvBorder}" Margin="0 0 0 25">
                <StackPanel Margin="5">
                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="CALVICIE:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding Calvicie}"
                                      ItemsSource="{Binding Calvicies}"/>
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="COLOR DE CABELLO:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding ColorCabello}"
                                      ItemsSource="{Binding ColoresCabellos}"/>
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="TAMAÑO DE CABELLO:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding TamanoCabello}"
                                      ItemsSource="{Binding TamanosCabellos}"/>
                        </StackPanel>

                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="TIPO DE CABELLO:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding TipoCabello}"
                                      ItemsSource="{Binding TiposCabellos}"/>
                        </StackPanel>

                    </WrapPanel>

                    <StackPanel>
                        <ui:TextBlock Text="CUALQUIER OTRA ESPECIFICACIÓN DEL CABELLO:" />
                        <ui:TextBox Text="{Binding DescripcionCabello}"
                                    TextWrapping="Wrap" AcceptsReturn="True" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <ui:TextBlock Text="Vello facial" FontTypography="Title" Margin="10" />
            <Border Style="{StaticResource CebvBorder}" Margin="0 0 0 25">
                <StackPanel Margin="5">
                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="CEJAS:" />
                            <ComboBox DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding TipoCeja}"
                                      ItemsSource="{Binding TiposCejas}"/>
                        </StackPanel>
                        
                        <StackPanel MinWidth="400">
                            <ui:TextBlock Text="CUALQUIER OTRA ESPECIFICACIÓN DE LAS CEJAS:" />
                            <ui:TextBox Text="{Binding DescripcionCejas}" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="BIGOTE:" />
                            <ComboBox SelectedItem="{Binding BigoteOpcion}"
                                      ItemsSource="{Binding Opciones}" />
                        </StackPanel>

                        <StackPanel MinWidth="400">
                            <ui:TextBlock Text="CUALQUIER OTRA ESPECIFICACIÓN DEL BIGOTE:" />
                            <ui:TextBox Text="{Binding BigoteDescripcion}" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0 0 0 15">
                        <StackPanel MinWidth="200" Margin="0 0 25 0">
                            <ui:TextBlock Text="BARBA:" />
                            <ComboBox SelectedItem="{Binding BarbaOpcion}"
                                      ItemsSource="{Binding Opciones}"/>
                        </StackPanel>

                        <StackPanel MinWidth="400">
                            <ui:TextBlock Text="CUALQUIER OTRA ESPECIFICACIÓN DE LA BARBA:" />
                            <ui:TextBox Text="{Binding BarbateDescripcion}" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <ui:TextBlock Text="Nariz" FontTypography="Title" Margin="10" />
            <Border Style="{StaticResource CebvBorder}" Margin="0 0 0 25">
                <WrapPanel Margin="5">
                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="FORMA DE LA NARIZ:" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding TipoNariz}"
                                  ItemsSource="{Binding TiposNarices}"/>
                    </StackPanel>

                    <StackPanel MinWidth="400">
                        <ui:TextBlock Text="CUALQUIER OTRA ESPECIFICACIÓN DE LA NARIZ:" />
                        <ui:TextBox Text="{Binding DescripcionNariz}" TextWrapping="Wrap" AcceptsReturn="True" />
                    </StackPanel>
                </WrapPanel>
            </Border>

            <ui:TextBlock Text="Boca" FontTypography="Title" Margin="10" />
            <Border Style="{StaticResource CebvBorder}" Margin="0 0 0 25">
                <WrapPanel Margin="5">
                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="TAMAÑO DE BOCA:" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding TamanoBoca}"
                                  ItemsSource="{Binding TamanosBocas}"/>
                    </StackPanel>

                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="TAMAÑO DE LABIOS:" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding TamanoLabio}"
                                  ItemsSource="{Binding TamanosLabios}"/>
                    </StackPanel>
                    
                    <StackPanel MinWidth="400">
                        <ui:TextBlock Text="CUALQUIER OTRA ESPECIFICACIÓN DE LA BOCA:" />
                        <ui:TextBox Text="{Binding DescripcionBoca}" TextWrapping="Wrap" AcceptsReturn="True" />
                    </StackPanel>
                </WrapPanel>
            </Border>

            <ui:TextBlock Text="Orejas" FontTypography="Title" Margin="10" />
            <Border Style="{StaticResource CebvBorder}" Margin="0 0 0 25">
                <WrapPanel Margin="5">
                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="TAMAÑO DE OREJAS" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding TamanoOreja}"
                                  ItemsSource="{Binding TamanosOrejas}"/>
                    </StackPanel>

                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="FORMA DE OREJAS:" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding FormaOreja}"
                                  ItemsSource="{Binding FormasOrejas}"/>
                    </StackPanel>

                    <StackPanel MinWidth="400">
                        <ui:TextBlock Text="CUALQUIER OTRA ESPECIFICACIÓN DE LA OREJA:" />
                        <ui:TextBox Text="{Binding DescripcionOreja}" TextWrapping="Wrap" AcceptsReturn="True" />
                    </StackPanel>
                </WrapPanel>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <ui:Button Grid.Row="2"
                   Command="{Binding GuardarReporteCommand}"
                   Content="{StaticResource GuardarContinuar}"
                   Icon="{ui:SymbolIcon Save24}"
                   Margin="10"
                   HorizontalAlignment="Stretch"
                   Appearance="Primary" />
    </Grid>
</Page>