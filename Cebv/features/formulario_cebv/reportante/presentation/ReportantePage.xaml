<Page x:Class="Cebv.features.formulario_cebv.reportante.presentation.ReportantePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:util="clr-namespace:Cebv.core.util"
      xmlns:presentation="clr-namespace:Cebv.features.formulario_cebv.reportante.presentation"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="auto"
      d:DesignHeight="auto"
      mc:Ignorable="d"
      Title="ReportantePage">

    <Page.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="Padding" Value="16" />
            <Setter Property="Background" Value="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ui:ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <util:VisibilityConverter x:Key="VisibilityConverter" />
    </Page.Resources>

    <Page.DataContext>
        <presentation:ReportanteViewModel />
    </Page.DataContext>

    <Grid>
        <StackPanel Margin="10">
            <ui:TextBlock Margin="0 0 0 25" Text="Persona Reportante" FontTypography="TitleLarge" />

            <StackPanel Margin="10">
                <ui:ToggleSwitch OnContent="¿ES ANÓNIMO? Sí" OffContent="¿ES ANÓNIMO? No"
                                 IsChecked="{Binding EsAnonimo }" />
                <Separator Height="25" Background="Transparent" BorderThickness="0" />
            </StackPanel>

            <StackPanel Margin="5"
                        Visibility="{Binding EsAnonimo,
                        Converter={StaticResource VisibilityConverter}}">

                <!-- Datos de identificación de la persona -->
                <ui:TextBlock Text="Datos de identificación de la persona" FontTypography="Subtitle" Margin="10" />
                <Border Margin="0 0 0 25">
                    <StackPanel Margin="5">
                        <!-- Nombre Completo -->
                        <WrapPanel Margin="0 0 0 25">
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="NOMBRE(S):" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding Nombre}" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="PRIMER APELLIDO:" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding ApellidoPaterno}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="SEGUNDO APELLIDO: " FontTypography="Caption" />
                                <ui:TextBox Text="{Binding ApellidoMaterno}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="PARENTESCO:" FontTypography="Caption" />
                                <ComboBox DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding Parentesco}"
                                          ItemsSource="{Binding Parentescos}" />
                            </StackPanel>
                        </WrapPanel>

                        <!-- Sexo y género -->
                        <WrapPanel Margin=" 0 0 0 25">
                            <StackPanel MinWidth="200">
                                <ui:TextBlock Text="SEXO:" FontTypography="Caption" />
                                <ComboBox DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding Sexo}"
                                          ItemsSource="{Binding Sexos}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="200">
                                <ui:TextBlock Text="GENERO:" FontTypography="Caption" />
                                <ComboBox DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding Genero}"
                                          ItemsSource="{Binding Generos}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="200">
                                <ui:TextBlock Text="RELIGIÓN:" FontTypography="Caption" />
                                <ComboBox />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="200">
                                <ui:TextBlock Text="LENGUA:" FontTypography="Caption" />
                                <ComboBox />
                            </StackPanel>
                        </WrapPanel>

                        <!-- Información de nacimiento -->
                        <WrapPanel Margin="0 0 0 25">
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="FECHA DE NACIMIENTO:" FontTypography="Caption" />
                                <DatePicker IsTodayHighlighted="True"
                                            SelectedDate="{Binding FechaNacimiento}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel Orientation="Vertical" MinWidth="200">
                                <ui:TextBlock Text="EDAD(AÑOS):" FontTypography="Caption" />
                                <ui:NumberBox Icon="{ui:SymbolIcon NumberSymbolSquare24}"
                                              MaxDecimalPlaces="0"
                                              Maximum="120"
                                              Minimum="0"
                                              PlaceholderText="Años"
                                              SmallChange="1" />
                            </StackPanel>
                        </WrapPanel>

                        <!-- Nacionalidad -->
                        <WrapPanel Margin="0 0 0 25">
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="LUGAR DE NACIMIENTO:" FontTypography="Caption" />
                                <ComboBox IsEditable="True"
                                          DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding LugarNacimiento}"
                                          ItemsSource="{Binding LugaresNacimientos}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="250" Margin="0 0 15 0">
                                <ui:TextBlock Text="NACIONALIDAD:" FontTypography="Caption" />
                                <ComboBox Width="250"
                                          IsEditable="True"
                                          DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding Nacionaliad}"
                                          ItemsSource="{Binding Nacionalidades}" />
                            </StackPanel>

                            <ui:Button Margin="0 15 0 0"
                                       Icon="{ui:SymbolIcon Add24}"
                                       VerticalAlignment="Stretch"
                                       Appearance="Primary" />
                        </WrapPanel>

                        <!-- Identifcaciones oficiales -->
                        <WrapPanel>
                            <StackPanel Orientation="Vertical" MinWidth="250">
                                <ui:TextBlock Text="RFC:" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding Rfc}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel Orientation="Vertical" MinWidth="250">
                                <ui:TextBlock Text="CURP:" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding Curp}" />
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Datos de contacto -->
                <ui:TextBlock Text="Datos de contacto" FontTypography="Subtitle" Margin="10" />
                <Border Margin="0 0 0 25">
                    <StackPanel Margin="5">
                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="TELÉFONO MÓVIL:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>
                            
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="COMPAÑÍA:" FontTypography="Caption" />
                                <ComboBox />
                            </StackPanel>
                            
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="OBSERVACIONES:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>

                            <ui:Button Content="Añadir otro  teléfono móvil" Appearance="Secondary" />
                        </WrapPanel>

                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="TELÉFONO FIJO:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>
                            
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="OBSERVACIONES:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>
                            
                            <ui:Button Content="Añadir otro  teléfono fijo" Appearance="Secondary" />
                        </WrapPanel>


                        <WrapPanel>
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="CORREO ELECTRÓNICO:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>
                            
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="OBSERVACIONES:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>
                            
                            <ui:Button Content="Añadir otro correo electrónico" Appearance="Secondary" />
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Domicilio de la persona -->
                <ui:TextBlock Text="Domicilio de la persona" FontTypography="Subtitle" Margin="10" />
                <Border Margin="0 0 0 25">
                    <StackPanel Margin="5">
                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="CALLE:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>

                            <StackPanel MinWidth="200" Margin="0 0 25 0">
                                <ui:TextBlock Text="N° EXTERIOR:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>

                            <StackPanel MinWidth="200" Margin="0 0 25 0">
                                <ui:TextBlock Text="N° INTERIOR:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="COLONIA:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>

                            <StackPanel MinWidth="200">
                                <ui:TextBlock Text="CÓDIGO POSTAL:" FontTypography="Caption" />
                                <ui:TextBox ClearButtonEnabled="True" />
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="ESTADO:" FontTypography="Caption" />
                                <ComboBox DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding Estado}"
                                          ItemsSource="{Binding Estados}" />
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="MUNICIPIO:" FontTypography="Caption" />
                                <ComboBox SelectedItem="{Binding Municipio}"
                                          ItemsSource="{Binding Municipios}" />
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="LOCALIDAD:" FontTypography="Caption" />
                                <ComboBox IsEditable="True"
                                          DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding Asentamiento}"
                                          ItemsSource="{Binding Asentamientos}" />
                            </StackPanel>

                            <StackPanel MinWidth="200" IsEnabled="False" Margin="0 0 25 0">
                                <ui:TextBlock Text="LONGITUD:" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding Asentamiento.Longitud}" />
                            </StackPanel>

                            <StackPanel MinWidth="200" IsEnabled="False">
                                <ui:TextBlock Text="LATITUD:" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding Asentamiento.Latitud}" />
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="ENTRE CALLE 1:" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding EntreCalle1}" />
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="ENTRE CALLE 2:" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding EntreCalle2}" />
                            </StackPanel>

                            <StackPanel MinWidth="250" Margin="0 0 25 0">
                                <ui:TextBlock Text="TRAMO CARRETERO:" FontTypography="Caption" />
                                <ui:TextBox Text="{Binding TramoCarretero}" />
                            </StackPanel>
                        </WrapPanel>

                        <StackPanel MinWidth="250">
                            <ui:TextBlock Text="REFERENCIA:" FontTypography="Caption" />
                            <ui:TextBox Text="{Binding Referencia}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <ui:TextBlock Text="Información relevante" FontTypography="Subtitle" Margin="10" />
                <Border Margin="0 0 0 25">
                    <StackPanel Margin="5">
                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="ESCOLARIDAD: " FontTypography="Caption" />
                                <ComboBox DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding Escolaridad}"
                                          ItemsSource="{Binding Escolaridades}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="ESTATUS DE LA ESCOLARIDAD: " FontTypography="Caption" />
                                <ComboBox SelectedItem="{Binding EstatusEscolaridad}"
                                          ItemsSource="{Binding EstatusEscolaridades}" />
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="ESTADO CONYUGAL: " FontTypography="Caption" />
                                <ComboBox DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding EstadoConyugal}"
                                          ItemsSource="{Binding EstadosConyugales}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel Margin="0 0 10 0" MinWidth="300">
                                <ui:TextBlock Text="PERTENCIA A GRUPO DE POBLACIÓN VULNERABLE:"
                                              FontTypography="Caption" />
                                <ComboBox />
                            </StackPanel>

                            <ui:Button Margin="0 15 0 0"
                                       Icon="{ui:SymbolIcon Add24}"
                                       VerticalAlignment="Stretch"
                                       Appearance="Primary" />
                        </WrapPanel>

                        <DockPanel>
                            <StackPanel>
                                <ui:TextBlock Text="INFORMACIÓN RELEVANTE QUE QUIERA AÑADIR: " FontTypography="Caption" />
                                <ui:TextBox Text="{Binding InformacionRelevante}" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </Border>

                <ui:TextBlock Text="Participación en búsquedas" FontTypography="Subtitle" Margin="10" />
                <Border Margin="0 0 0 25">
                    <StackPanel Margin="5">
                        <WrapPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="¿HA REALIZADO BÚSQUEDAS CON ANTERIORIDAD?" FontTypography="Caption" />
                                <ComboBox />
                            </StackPanel>
                        </WrapPanel>

                        <DockPanel Margin="0 0 0 15">
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="¿EN DÓNDE?" FontTypography="Caption" />
                                <ui:TextBox />
                            </StackPanel>
                        </DockPanel>
                        <WrapPanel>
                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="PERTENECE A ALGÚN COLECTIVO: " FontTypography="Caption" />
                                <ComboBox SelectedItem="{Binding PertenciaColectivo}"
                                          ItemsSource="{Binding PertenenciasColectivos}" />
                            </StackPanel>

                            <Separator Width="25" Background="Transparent" BorderThickness="0" />

                            <StackPanel MinWidth="250">
                                <ui:TextBlock Text="NOMBRE DEL COLECTIVO: " FontTypography="Caption" />
                                <ui:TextBox Text="{Binding NombreColectivo }" />
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <ui:TextBlock Text="Datos de posible extorsión o amenaza" FontTypography="Subtitle" Margin="10" />
                <Border Margin="0 0 0 25">
                    <StackPanel Margin="5">
                        <StackPanel Margin="0 0 0 15">
                            <ui:TextBlock Text="¿HA SIDO VICTIMA DE EXTORSIÓN O FRAUDE?" FontTypography="Caption" />
                            <ComboBox />
                        </StackPanel>

                        <DockPanel Margin="0 0 0 15">
                            <StackPanel>
                                <ui:TextBlock Text="DESCRIPCIÓN DE LA SITUACIÓN:" FontTypography="Caption" />
                                <ui:TextBox />
                            </StackPanel>
                        </DockPanel>

                        <StackPanel MinWidth="250" Margin="0 0 0 15">
                            <ui:TextBlock Text="¿HA RECIBIDO AMENAZAS?" FontTypography="Caption" />
                            <ComboBox />
                        </StackPanel>
                        <DockPanel>
                            <StackPanel MinWidth="400">
                                <ui:TextBlock Text="¿SABE DE DONDE PROVIENE?" FontTypography="Caption" />
                                <ui:TextBox />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <ui:Button Command="{Binding GuardarReportanteCommand}"
                       Content="Guardar y siguiente"
                       Icon="{ui:SymbolIcon Save24}"
                       Margin="10"
                       HorizontalAlignment="Stretch"
                       Appearance="Primary" />
        </StackPanel>
    </Grid>
</Page>