<Page x:Class="Cebv.features.formulario_cebv.datos_del_reporte.presentation.DatosReportePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="Auto"
      d:DesignHeight="Auto"
      Title="PestanaReporteView">
    <Grid>
        <StackPanel>
            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="5">
                <WrapPanel>
                    <StackPanel Margin="5">
                        <ui:TextBlock> Tipo de folio</ui:TextBlock>
                        <ComboBox MinWidth="200"
                                  SelectedValuePath="Key"
                                  DisplayMemberPath="Value"
                                  ItemsSource="{Binding TiposReportes}" />
                    </StackPanel>

                    <StackPanel MinWidth="200"
                                Margin="5">
                        <ui:TextBlock> Tipo de desaparición</ui:TextBlock>
                        <ComboBox MinWidth="200" />
                    </StackPanel>

                    <StackPanel MinWidth="200"
                                Margin="5">
                        <ui:TextBlock> Zona del estado</ui:TextBlock>
                        <ComboBox MinWidth="200" />
                    </StackPanel>

                    <StackPanel MinWidth="200"
                                Margin="5">
                        <ui:TextBlock>Área que atiende</ui:TextBlock>
                        <ComboBox MinWidth="200" />
                    </StackPanel>

                    <StackPanel MinWidth="200"
                                Margin="5">
                        <ui:TextBlock>Folio CEBV</ui:TextBlock>
                        <ui:TextBox MinWidth="150"></ui:TextBox>
                    </StackPanel>
                </WrapPanel>
            </Border>

            <Separator Margin="10" />

            <ui:TextBlock Text="Información RNPDNO"
                          FontTypography="Subtitle" />
            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="5">
                <WrapPanel>
                    <StackPanel Margin="5">
                        <ui:TextBlock Text="&#x0a;Folio FUB:"
                                      FontTypography="Caption" />
                        <ui:TextBox MinWidth="200" />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <ui:TextBlock Text="&#x0a;Autoridad que ingresó FUB"
                                      FontTypography="Caption" />
                        <ui:TextBox MinWidth="200" />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <ui:TextBlock Text="&#x0a;Estatus de persona RNPDNO:"
                                      FontTypography="Caption" />
                        <ComboBox MinWidth="200" />
                    </StackPanel>
                </WrapPanel>
            </Border>

            <Separator Margin="10" />

            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="5">
                <WrapPanel>
                    <StackPanel MinWidth="200"
                                Margin="5">
                        <ui:TextBlock Text="Se cuenta con la información&#x0a;de consentimiento" />
                        <ComboBox Margin="0,0,0,5" MinWidth="150">
                            <ComboBoxItem Content="SI" />
                            <ComboBoxItem Content="NO" />
                            <ComboBoxItem Content="NO ESPECIFICA" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Stretch"
                                Margin="5">
                        <ui:TextBlock
                            Text="MANIFIESTA QUE LA INFORMACIÓN QUE APORTE PARA EL RNO SEA&#x0a;UTILIZADA EXCLUSIVAMENTE PARA LA BÚSQUEDA E IDENTIFICACIÓN DE LA PERSONA DESAPARECIDA O NO LOCALIZADA.:" />
                        <ComboBox>
                            <ComboBoxItem Content="SI" />
                            <ComboBoxItem Content="NO" />
                            <ComboBoxItem Content="NO ESPECIFICA" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <ui:TextBlock> ¿SOLICITA QUE SE HAGA PÚBLICA LA INFORMACIÓN DE LA PERSONA&#x0a;DESAPARECIDA O NO LOCALIZADA?</ui:TextBlock>
                        <ComboBox>
                            <ComboBoxItem Content="SI" />
                            <ComboBoxItem Content="NO" />
                            <ComboBoxItem Content="NO ESPECIFICA" />
                        </ComboBox>
                    </StackPanel>
                </WrapPanel>
            </Border>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="left"
                        VerticalAlignment="Center">
                <StackPanel Width="259">
                    <ui:TextBlock
                        HorizontalAlignment="left">
                        MEDIO DE CONOCIMIENTO GENÉRICO:
                    </ui:TextBlock>
                    <ComboBox
                        MinWidth="150"
                        SelectedValuePath="Key"
                        DisplayMemberPath="Value"
                        ItemsSource="{Binding TiposMedios}" />
                </StackPanel>
                <StackPanel Width="238">
                    <ui:TextBlock> MEDIO DE CONOCIMIENTO ESPECÍFICO:</ui:TextBlock>
                    <ComboBox
                        MinWidth="150"
                        SelectedValuePath="Key"
                        DisplayMemberPath="Value"
                        ItemsSource="{Binding Medios}" />
                </StackPanel>
                <StackPanel Margin="10,0,26,0">
                    <ui:TextBlock> DEPENDENCIA DE ORIGEN:</ui:TextBlock>
                    <ui:TextBox MinWidth="150"></ui:TextBox>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <ui:TextBlock Width="248">ESTADO DE DONDE PROVIENE EL REPORTE:</ui:TextBlock>
                    <ComboBox
                        MinWidth="170"
                        SelectedValuePath="Key"
                        DisplayMemberPath="Value"
                        ItemsSource="{Binding Estados}" />
                </StackPanel>
            </StackPanel>

            <Separator Margin="10" />

            <ui:TextBlock Text="CARPETA DE INVESTIGACIÓN:"
                          FontTypography="Subtitle" />

            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="5">
                <WrapPanel>
                    <StackPanel>
                        <ui:TextBlock Width="220">
                            ESPECIFICA SI HAY O EXISTE CI:
                        </ui:TextBlock>
                        <ComboBox MinWidth="150">
                            <!-- Agregar elementos al ComboBox -->
                            <ComboBoxItem Content="SI" />
                            <ComboBoxItem Content="NO" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel>
                        <ui:TextBlock Width="220">NÚMERO DE CI, IM O REPORTE DE FGE:</ui:TextBlock>
                        <ui:TextBox MinWidth="150" Width="218"></ui:TextBox>
                    </StackPanel>
                    <StackPanel>
                        <ui:TextBlock Width="246">DÓNDE RADICA LA CI, IM O REPORTE DE FGE:</ui:TextBlock>
                        <ui:TextBox MinWidth="150" Width="248"></ui:TextBox>
                    </StackPanel>
                    <StackPanel>
                        <ui:TextBlock Width="220"
                                      Text="NOMBRE DEL SERVIDOR (A) PÚBLICO:" />
                        <ui:TextBox MinWidth="220" />
                    </StackPanel>
                    <StackPanel>
                        <ui:TextBlock>FECHA DE RECEPCIÓN DE CI, IM O REPORTE DE FGE :</ui:TextBlock>
                        <ui:TextBox MinWidth="150" Width="265" />
                    </StackPanel>
                </WrapPanel>
            </Border>

            <Separator Margin="0,10,0,35" />

            <ui:TextBlock Text="AMPARO BUSCADOR:"
                          Margin="10,0,0,10"
                          FontTypography="Subtitle" />

            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="5">
                <WrapPanel>
                    <StackPanel>
                        <ui:TextBlock>ESPECIFICA SI HAY O EXISTE AMPARO BUSCADOR:</ui:TextBlock>
                        <ComboBox MinWidth="150">
                            <!-- Agregar elementos al ComboBox -->
                            <ComboBoxItem Content="SI" />
                            <ComboBoxItem Content="NO" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <ui:TextBlock>NÚMERO DE AMPARO BUSCADOR:</ui:TextBlock>
                        <ui:TextBox MinWidth="150"
                                    Width="184">
                        </ui:TextBox>
                    </StackPanel>

                    <StackPanel>
                        <ui:TextBlock>DÓNDE RADICA EL AMPARO BUSCADOR:</ui:TextBlock>
                        <ui:TextBox MinWidth="150"
                                    Width="212">
                        </ui:TextBox>
                    </StackPanel>

                    <StackPanel>
                        <ui:TextBlock Width="266"> NOMBRE DEL JUEZ:</ui:TextBlock>
                        <ui:TextBox MinWidth="150" Width="250"></ui:TextBox>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center">
                        <ui:TextBlock>DÓNDE RADICA EL AMPARO BUSCADOR:</ui:TextBlock>
                        <DatePicker />
                    </StackPanel>
                </WrapPanel>
            </Border>

            <!-- Línea de separación horizontal -->
            <Separator Margin="0,10,0,35" />

            <ui:TextBlock Text="RECOMENDACIÓN DE DERECHOS HUMANOS:"
                          FontTypography="Subtitle" />

            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="5">
                <WrapPanel>
                    <StackPanel Width="400"
                                Margin="10">
                        <StackPanel>
                            <ui:TextBlock>
                                ESPECIFICA SI HAY O EXISTE RECOMENDACIÓN DH:
                            </ui:TextBlock>
                            <ComboBox>
                                <!-- Agregar elementos al ComboBox -->
                                <ComboBoxItem Content="SI" />
                                <ComboBoxItem Content="NO" />
                            </ComboBox>
                        </StackPanel>
                        <StackPanel>
                            <ui:TextBlock> NÚMERO DE RECOMENDACIÓN DERECHOS HUMANOS:</ui:TextBlock>
                            <ui:TextBox/>
                        </StackPanel>
                        <StackPanel>
                            <ui:TextBlock>
                                DÓNDE RADICA LA RECOMENDACIÓN DERECHOS HUMANOS:
                            </ui:TextBlock>
                            <ui:TextBox/>
                        </StackPanel>
                        <StackPanel>
                            <ui:TextBlock>NOMBRE DEL SERVIDOR (A) PÚBLICO:</ui:TextBlock>
                            <ui:TextBox/>
                        </StackPanel>
                        <StackPanel>
                            <ui:TextBlock>FECHA DE RECEPCIÓN RECOMENDACIÓN DH:</ui:TextBlock>
                            <DatePicker/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="10">
                        <StackPanel>
                            <RadioButton Content="DECLARACIÓN ESPECIAL DE AUSENCIA" GroupName="GrupoOpciones"
                                         Margin="5" />
                            <RadioButton Content="ACCIÓN URGENTE" GroupName="GrupoOpciones" Margin="5" />
                            <RadioButton Content="DICTAMEN" GroupName="GrupoOpciones" Margin="5" />
                            <RadioButton Content="CARPETA DE INVESTIGACIÓN A NIVEL FEDERAL"
                                         GroupName="GrupoOpciones" Margin="5" />
                            <RadioButton Content="OTRO, ESPECIFIQUE" GroupName="GrupoOpciones" Margin="5" />
                            <ui:TextBox Margin="10,0,0,0" MinWidth="450" />
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>
            </Border>
            
            <Separator Margin="10" />
            
            <ui:Button Content="Guardar y siguiente"
                       Icon="{ui:SymbolIcon Save24}"
                       HorizontalAlignment="Stretch"
                       Appearance="Primary"/>
        </StackPanel>
    </Grid>
</Page>