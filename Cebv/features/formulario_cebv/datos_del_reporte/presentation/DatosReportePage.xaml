<Page x:Class="Cebv.features.formulario_cebv.datos_del_reporte.presentation.DatosReportePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="Auto"
      d:DesignHeight="Auto"
      Title="PestanaReporteView">
    <Grid Background="{DynamicResource PrimaryBlueColor}">
        <StackPanel>
            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Margin="0,10,0,0">
                <WrapPanel>
                    <StackPanel Margin="15,0,15,0">
                        <ui:TextBlock> TIPO DE FOLIO:</ui:TextBlock>
                        <ComboBox MinWidth="180"  
                                  SelectedValuePath="Key"
                                  DisplayMemberPath="Value"
                                  ItemsSource="{Binding TiposReportes}"/>
                    </StackPanel>

                    <StackPanel Margin="15,0,15,0">
                        <ui:TextBlock> TIPO DE DESAPARICIÓN:</ui:TextBlock>
                        <ComboBox MinWidth="180"/>
                    </StackPanel>

                    <StackPanel Margin="15,0,15,0">
                        <ui:TextBlock> ZONA DE ESTADO:</ui:TextBlock>
                        <ComboBox MinWidth="180" />
                    </StackPanel>

                    <StackPanel Margin="15,0,15,0">
                        <ui:TextBlock>ÁREA QUE ATIENDE:</ui:TextBlock>
                        <ComboBox MinWidth="180" />
                    </StackPanel>

                    <StackPanel Margin="15,0,15,0">
                        <ui:TextBlock>FOLIO CEBV:</ui:TextBlock>
                        <ui:TextBox MinWidth="150"></ui:TextBox>
                    </StackPanel>    
                </WrapPanel>
            </Border>

            <!-- Línea de separación horizontal -->
            <Separator Margin="0,10,0,35"/>
            <StackPanel>
                <ui:TextBlock  Text="INFORMACIÓN RNPDNO:" Margin="10,0,0,10" FontTypography="Subtitle" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="15,0,133,0">
                    <ui:TextBlock> FOLIO FUB:</ui:TextBlock>
                    <ui:TextBox MinWidth="150"></ui:TextBox>
                </StackPanel>
                <StackPanel Margin="15,0,133,0">
                    <ui:TextBlock> AUTORIDAD QUE INGRESÓ FUB:</ui:TextBlock>
                    <ui:TextBox MinWidth="150"/>
                </StackPanel>
                <StackPanel Margin="15,0,15,0">
                    <ui:TextBlock>ESTATUS DE PERSONA RNPDNO:</ui:TextBlock>
                    <ComboBox MinWidth="150" Height="31" />
                </StackPanel>
            </StackPanel>
            <!-- Línea de separación horizontal -->
            <Separator Margin="10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="left" VerticalAlignment="Center">
                <StackPanel Margin="10,0,59,0">
                    <ui:TextBlock Margin="0,0,0,16" Width="370"> SE CUENTA CON LA INFORMACIÓN DE CONSENTIMIENTO:</ui:TextBlock>
                    <ComboBox Margin="0,0,0,5" MinWidth="150">
                        <!-- Agregar elementos al ComboBox -->
                        <ComboBoxItem Content="SI" />
                        <ComboBoxItem Content="NO" />
                    </ComboBox>
                </StackPanel>
                <StackPanel>
                    <ui:TextBlock TextWrapping="Wrap" Margin="15,0,0,3" Width="550">
                        MANIFIESTA QUE LA INFORMACIÓN QUE APORTE PARA EL RNO SEA UTILIZADA EXCLUSIVAMENTE PARA LA BÚSQUEDA E IDENTIFICACIÓN DE LA PERSONA
                        DESAPARECIDA O NO LOCALIZADA.:
                    </ui:TextBlock>
                    <ComboBox Margin="15,0,0,5" MinWidth="150">
                        <!-- Agregar elementos al ComboBox -->
                        <ComboBoxItem Content="SI" />
                        <ComboBoxItem Content="NO" />
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="left" VerticalAlignment="Center">
                <StackPanel Margin="0,10,0,10">
                    <ui:TextBlock TextWrapping="Wrap" Margin="10,0,0,5" Width="715"> ¿SOLICITA QUE SE HAGA PÚBLICA LA INFORMACIÓN DE LA PERSONA DESAPARECIDA O NO LOCALIZADA?</ui:TextBlock>
                    <ComboBox Margin="10,0,0,0" MinWidth="150" >
                        <!-- Agregar elementos al ComboBox -->
                        <ComboBoxItem Content="SI" />
                        <ComboBoxItem Content="NO" />
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="left" VerticalAlignment="Center">
                <StackPanel Width="259" Margin="10,0,20,0">
                    <ui:TextBlock
                        HorizontalAlignment="left">
                        MEDIO DE CONOCIMIENTO GENÉRICO:
                    </ui:TextBlock>
                    <ComboBox
                        MinWidth="150"
                        SelectedValuePath="Key"
                        DisplayMemberPath="Value"
                        ItemsSource="{Binding TiposMedios}"
                       />
                </StackPanel>
                <StackPanel Width="238" Margin="10,0,20,0">
                    <ui:TextBlock> MEDIO DE CONOCIMIENTO ESPECÍFICO:</ui:TextBlock>
                    <ComboBox
                        MinWidth="150"
                        SelectedValuePath="Key"
                        DisplayMemberPath="Value"
                        ItemsSource="{Binding Medios}" 
                       />
                </StackPanel>
                <StackPanel Margin="10,0,26,0">
                    <ui:TextBlock> DEPENDENCIA DE ORIGEN:</ui:TextBlock>
                    <ui:TextBox  MinWidth="150"></ui:TextBox>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <ui:TextBlock Width="248">ESTADO DE DONDE PROVIENE EL REPORTE:</ui:TextBlock>
                    <ComboBox
                              MinWidth="170"
                              SelectedValuePath="Key"
                              DisplayMemberPath="Value"
                              ItemsSource="{Binding Estados}"
                             />
                </StackPanel>
            </StackPanel>
            <!-- Línea de separación horizontal -->
            <Separator Margin="0,10,0,35"/>
            <StackPanel>
                <ui:TextBlock  Text="CARPETA DE INVESTIGACIÓN:" Margin="10,0,0,10" FontTypography="Subtitle" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="left">
                <StackPanel Margin="10,0,25,0">
                    <ui:TextBlock Margin="0,0,0,5"
                                                                               Width="220">
                        ESPECIFICA SI HAY O EXISTE CI:
                    </ui:TextBlock>
                    <ComboBox MinWidth="150">
                        <!-- Agregar elementos al ComboBox -->
                        <ComboBoxItem Content="SI" />
                        <ComboBoxItem Content="NO" />
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="0,0,25,0">
                    <ui:TextBlock Margin="0,0,0,5" Width="220">NÚMERO DE CI, IM O REPORTE DE FGE:</ui:TextBlock>
                    <ui:TextBox MinWidth="150" Width="218"></ui:TextBox>
                </StackPanel>
                <StackPanel Margin="0,0,30,0">
                    <ui:TextBlock Margin="0,0,0,5" Width="246">DÓNDE RADICA LA CI, IM O REPORTE DE FGE:</ui:TextBlock>
                    <ui:TextBox MinWidth="150" Width="248"></ui:TextBox>
                </StackPanel>
                <StackPanel Margin="0,0,0,0">
                    <ui:TextBlock Margin="0,0,0,5"
                                  Width="220"
                                  Text="NOMBRE DEL SERVIDOR (A) PÚBLICO:"/>
                    <ui:TextBox MinWidth="220"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="0,10,0,10" HorizontalAlignment="Center">
                <ui:TextBlock Margin="0,0,0,5">FECHA DE RECEPCIÓN DE CI, IM O REPORTE DE FGE :</ui:TextBlock>
                <ui:TextBox MinWidth="150" Width="265"/>
            </StackPanel>

            <!-- Línea de separación horizontal -->
            <Separator Margin="0,10,0,35"/>
            <StackPanel>
                <ui:TextBlock  Text="AMPARO BUSCADOR:" Margin="10,0,0,10" FontTypography="Subtitle" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="left">
                <StackPanel Margin="10,0,20,0">
                    <ui:TextBlock Margin="0,0,0,5">ESPECIFICA SI HAY O EXISTE AMPARO BUSCADOR:</ui:TextBlock>
                    <ComboBox MinWidth="150">
                        <!-- Agregar elementos al ComboBox -->
                        <ComboBoxItem Content="SI" />
                        <ComboBoxItem Content="NO" />
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="0,0,20,0">
                    <ui:TextBlock Margin="0,0,0,5">NÚMERO DE AMPARO BUSCADOR:</ui:TextBlock>
                    <ui:TextBox MinWidth="150"
                                Width="184">
                    </ui:TextBox>
                </StackPanel>
                <StackPanel Margin="0,0,20,0">
                    <ui:TextBlock Margin="0,0,0,5">DÓNDE RADICA EL AMPARO BUSCADOR:</ui:TextBlock>
                    <ui:TextBox MinWidth="150"
                                Width="212">
                    </ui:TextBox>
                </StackPanel>
                <StackPanel>
                    <ui:TextBlock Margin="0,0,0,5" Width="266"> NOMBRE DEL JUEZ:</ui:TextBlock>
                    <ui:TextBox MinWidth="150" Width="250"></ui:TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="0,10,0,10" HorizontalAlignment="Center">
                <ui:TextBlock>DÓNDE RADICA EL AMPARO BUSCADOR:</ui:TextBlock>
                <DatePicker/>
            </StackPanel>
            <!-- Línea de separación horizontal -->
            <Separator Margin="0,10,0,35"/>
            <StackPanel>
                <ui:TextBlock  Text="RECOMENDACIÓN DE DERECHOS HUMANOS:" Margin="10,0,0,10" FontTypography="Subtitle" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="left">
                <StackPanel Margin="10,0,10,0">
                    <ui:TextBlock TextWrapping="Wrap"
                                  Margin="0,0,0,5" Width="220"> ESPECIFICA SI HAY O EXISTE RECOMENDACIÓN DH:</ui:TextBlock>
                    <ComboBox MinWidth="150">
                        <!-- Agregar elementos al ComboBox -->
                        <ComboBoxItem Content="SI" />
                        <ComboBoxItem Content="NO" />
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="10,0,10,0">
                    <ui:TextBlock TextWrapping="Wrap" Width="220" Margin="0,0,0,5"> NÚMERO DE RECOMENDACIÓN DERECHOS HUMANOS:</ui:TextBlock>
                    <ui:TextBox MinWidth="150" Width="222"></ui:TextBox>
                </StackPanel>
                <StackPanel Margin="10,0,10,0">
                    <ui:TextBlock TextWrapping="Wrap"
                                  Width="220" Margin="0,0,0,5">
                        DÓNDE RADICA LA RECOMENDACIÓN DERECHOS HUMANOS:
                    </ui:TextBlock>
                    <ui:TextBox MinWidth="150"
                                Width="224">
                    </ui:TextBox>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <ui:TextBlock Margin="0,0,0,18" Width="266">NOMBRE DEL SERVIDOR (A) PÚBLICO:</ui:TextBlock>
                    <ui:TextBox MinWidth="150" Width="262"></ui:TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="0,10,0,10" HorizontalAlignment="Center">
                <ui:TextBlock Margin="0,0,0,5">FECHA DE RECEPCIÓN RECOMENDACIÓN DH:</ui:TextBlock>
                <DatePicker MinWidth="150"></DatePicker>
            </StackPanel>
            <!-- Línea de separación horizontal -->
            <Separator Margin="10" />
            <StackPanel HorizontalAlignment="Center">
                <StackPanel>
                    <RadioButton Content="DECLARACIÓN ESPECIAL DE AUSENCIA" GroupName="GrupoOpciones"
                                 Margin="5" />
                    <RadioButton Content="ACCIÓN URGENTE" GroupName="GrupoOpciones" Margin="5"/>
                    <RadioButton Content="DICTAMEN" GroupName="GrupoOpciones" Margin="5" />
                    <RadioButton Content="CARPETA DE INVESTIGACIÓN A NIVEL FEDERAL"
                                 GroupName="GrupoOpciones" Margin="5" />
                    <RadioButton Content="OTRO, ESPECIFIQUE" GroupName="GrupoOpciones" Margin="5" />
                    <ui:TextBox Margin="10,0,0,0" MinWidth="450"/>
                </StackPanel>
            </StackPanel>
            <!-- Línea de separación horizontal -->
            <Separator Margin="10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <ui:Button Content="GUARDAR" Appearance="Primary"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>