<Page x:Class="Cebv.features.formulario_cebv.senas_particulares.presentation.SenasParticularesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:presentation="clr-namespace:Cebv.features.formulario_cebv.senas_particulares.presentation"
      xmlns:presentation1="clr-namespace:Cebv.features.formulario_cebv.condiciones_vulnerabilidad.presentation"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="1024"
      d:DesignHeight="auto"
      Name="Page"
      Title="SenasParticualresPage">

    <Page.DataContext>
        <presentation:SenasParticularesViewModel />
    </Page.DataContext>

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TextBlock Grid.Row="0" Text="{StaticResource SenasParticularesTitle}" FontTypography="TitleLarge" />

        <StackPanel Grid.Row="1" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Grid.Column="0"
                      Margin="10"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      MaxWidth="500">

                    <ui:Image Source="/core/resources/images/senas/Cuerpo MapingSide.png"
                              x:Name="LadoImage"
                              CornerRadius="8"
                              Stretch="Uniform" />

                    <ui:Image Source="/core/resources/images/senas/RegionCuerpoColorMejorado.png"
                              x:Name="RegionCuerpoImage"
                              CornerRadius="8"
                              Stretch="Uniform" />

                    <ui:Image Source="/core/resources/images/senas/CuerpoUNIXMejorado.png"
                              MouseDown="Image_MouseDown"
                              CornerRadius="8"
                              BorderBrush="#000000"
                              Stretch="Uniform" />
                </Grid>

                <Grid Grid.Row="0"
                      Grid.Column="1"
                      Grid.ColumnSpan="2">
                    <StackPanel>
                        <!-- Tipo de se침a -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <!-- Region cuerpo -->
                                <ui:TextBlock Text="Regi칩n del cuerpo:"
                                              Margin="10,10,0,0" />
                                <ComboBox Margin="5,0,5,0"
                                          DisplayMemberPath="Nombre"
                                          SelectedValue="{Binding RegionCuerpoSelected}"
                                          ItemsSource="{Binding RegionesCuerpo}"/>
                                
                                <!-- Vista -->
                                <ui:TextBlock Text="Vista:"
                                              Margin="10,10,0,0" />
                                <ComboBox Margin="5,0,5,0"
                                          DisplayMemberPath="Nombre"
                                          SelectedValue="{Binding VistaSelected}"
                                          ItemsSource="{Binding Vistas}" />

                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <ui:TextBlock Text="Lado:"
                                              Margin="10,10,0,0" />
                                <ComboBox Margin="5,0,5,0"
                                          DisplayMemberPath="Nombre"
                                          SelectedValue="{Binding LadoSelected}"
                                          ItemsSource="{Binding Lados}" />

                                <!-- Cantidad -->
                                <ui:TextBlock Text="Cantidad:"
                                              Margin="10,10,0,0" />
                                <ui:NumberBox Margin="5,0,5,0"
                                              Value="{Binding Cantidad}"
                                              Tag="Number" Minimum="1"/>

                            </StackPanel>
                        </Grid>
                        
                        <ui:TextBlock Text="Tipo de se침a:"
                                      Margin="10,10,0,0" />
                        <ComboBox Margin="5,0,5,0"
                                  DisplayMemberPath="Nombre"
                                  SelectedValue="{Binding TipoSelected}"
                                  ItemsSource="{Binding Tipos}" />

                        
                        <!-- Descripcion -->
                        <ui:TextBlock Text="Descripci칩n:"
                                      Margin="10,10,0,0" />
                        <TextBox Margin="10"
                                 VerticalAlignment="Stretch"
                                 Height="100"
                                 Text="{Binding Descripcion}"
                                 TextWrapping="Wrap" />

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="10">
                            <ui:Button Content="Eliminar"
                                       Margin="5,0,0,0"
                                       Icon="{ui:SymbolIcon Delete24}"
                                       Appearance="Danger" />
                            <ui:Button Content="Subir imagen"
                                       Margin="5,0,0,0"
                                       Icon="{ui:SymbolIcon ArrowUpload24}" />
                            <ui:Button Content="Agregar registro"
                                       Margin="5,0,0,0"
                                       Command="{Binding AddSenaParticularCommand}"
                                       Icon="{ui:SymbolIcon Add24}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <DataGrid Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="3"
                          Margin="10,0,10,10"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Desaparecido.Persona.SenasParticulares}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Region del cuerpo"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding RegionCuerpo.Nombre}" />
                        <DataGridTextColumn Header="Vista"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Vista.Nombre}" />
                        <DataGridTextColumn Header="Lado"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Lado.Nombre}" />
                        <DataGridTextColumn Header="Tipo"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Tipo.Nombre}" />
                        <DataGridTextColumn Header="Cantidad"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Cantidad}" />
                        <DataGridTextColumn Header="Descripcion"
                                            CanUserResize="False"
                                            Width="3*"
                                            Binding="{Binding Descripcion}" />
                        <DataGridTextColumn Header="Fotografia"
                                            CanUserResize="False"
                                            Width="*"
                                            Binding="{Binding Foto}"/>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button Icon="{ui:SymbolIcon Delete24}"
                                               Appearance="Danger"
                                               Margin="3"
                                               Command="{Binding ElementName=Page, Path=DataContext.DeleteSenaParticularCommand}"
                                               CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </StackPanel>

        <!-- Footer -->
        <ui:Button Grid.Row="2"
                   Content="{StaticResource GuardarContinuar}"
                   Icon="{ui:SymbolIcon Save24}"
                   Margin="10"
                   HorizontalAlignment="Stretch"
                   Command="{Binding GuardarYContinuarCommand}"
                   CommandParameter="{x:Type presentation1:CondicionesVulnerabilidadPage}"
                   Appearance="Primary"/>
    </Grid>
</Page>