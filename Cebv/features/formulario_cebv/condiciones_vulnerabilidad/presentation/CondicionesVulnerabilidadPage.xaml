<Page x:Class="Cebv.features.formulario_cebv.condiciones_vulnerabilidad.presentation.CondicionesVulnerabilidadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Cebv.features.formulario_cebv.condiciones_vulnerabilidad.presentation"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:presentation="clr-namespace:Cebv.features.formulario_cebv.datos_de_localizacion.presentation"
      xmlns:presentation1="clr-namespace:Cebv.features.formulario_cebv.datos_del_reporte.presentation"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="auto"
      d:DesignHeight="auto"
      mc:Ignorable="d"
      Title="CondicionesVulnerabilidadPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Vertical" Margin="30,15,0,0" HorizontalAlignment="Stretch">
                <ui:TextBlock Text="Tipo de  Sangre:"
                              Width="Auto" />
                <ComboBox
                    Margin="0,15,0,0"
                    MinWidth="300"
                    MinHeight="50">
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="100,10,10,0"
                        Orientation="Vertical">
                <ui:TextBlock
                    Text=" Historia clínica 'cirigias' y enfermedades Diagnosticas pasadas (separe cada caracteristica por ;)">
                </ui:TextBlock>
                <TextBox Margin="0,20,0,0"
                         MinWidth="600"
                         Height="70"
                         VerticalAlignment="Stretch"
                         TextWrapping="Wrap">
                </TextBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,0" Orientation="Horizontal">

            <StackPanel Margin="30,0,10,0"
                        Orientation="Vertical">
                <ui:TextBlock
                    Text="Condición de salud (¿tiene algún diagnóstico médico?, ¿tiene lguna emfermedad &#x0a;crónica?)">
                </ui:TextBlock>
                <TextBox Margin="0,15,0,0"
                         Height="70"
                         TextWrapping="Wrap"
                         VerticalAlignment="Stretch">
                </TextBox>
            </StackPanel>

            <StackPanel Margin="100,0,10,0"
                        Orientation="Vertical">
                <ui:TextBlock
                    Text="¿Requiere tratamiento médico para alguna enefermedad crónica? (diabetes, hipertención, &#x0a; alguna enfermedad cardiaca, etc) si/¿qué enfermedad?">
                </ui:TextBlock>
                <TextBox Margin="0,15,0,0"
                         Height="70"
                         TextWrapping="Wrap"
                         VerticalAlignment="Stretch">
                </TextBox>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,30,0,0" Orientation="Horizontal">

            <StackPanel Margin="30,0,10,0">
                <ui:TextBlock
                    Text="¿Requiere tratamiento psiquiátrico para alguna enfermedad mental?, (depresión, &#x0a; esquizofrenia, alzheimer, etc) si/¿qué emfermedad?">
                </ui:TextBlock>
                <TextBox Margin="0,15,0,0"
                         Height="70"
                         TextWrapping="Wrap"
                         VerticalAlignment="Stretch">
                </TextBox>
            </StackPanel>

            <StackPanel Margin="120,30,0,0">
                <ui:TextBlock Text="Pertenencia grupal o étnica (SI/NO): "
                              Margin="0,0,0,10" />
                <ComboBox MinWidth="300"
                          MinHeight="50">
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,30,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel Margin="30,10,0,0">
                <ui:TextBlock Text="¿Está embarazada? (SI/NO): "
                              Margin="0,0,0,10" />
                <ComboBox MinWidth="250"
                          MinHeight="50">
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="80,10,0,0">
                <ui:TextBlock Text="Meses de embarazo: "
                              Margin="0,0,0,10" />
                <ComboBox MinWidth="250"
                          MinHeight="50">
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="80,0,10,0">
                <ui:TextBlock
                    Text="Cualquier otra característica perosnal que pueda colocar a la persona en mayor vulnerabilidad">
                </ui:TextBlock>
                <TextBox Margin="0,15,0,0"
                         Height="70"
                         TextWrapping="Wrap"
                         VerticalAlignment="Stretch">
                </TextBox>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,30,0,0" Orientation="Horizontal">

            <StackPanel Margin="30,15,10,0">
                <ui:TextBlock
                    Text="Identifique las características que presenta para un enfoque diferenciado">
                </ui:TextBlock>
                <TextBox Margin="0,15,0,0"
                         Height="70"
                         TextWrapping="Wrap"
                         VerticalAlignment="Stretch">
                </TextBox>
            </StackPanel>

            <StackPanel Margin="50,0,10,0">
                <ui:TextBlock
                    Text="Cualquier otra información personal adicional que se considere relevante para la búsqueda y localizacion de la persona &#x0a;(separare cada característica por ;)">
                </ui:TextBlock>
                <TextBox Margin="0,15,0,0"
                         Height="70"
                         TextWrapping="Wrap"
                         VerticalAlignment="Stretch">
                </TextBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,30,0,0" Orientation="Horizontal" HorizontalAlignment="Center">

            <StackPanel Margin="30,0,0,0">
                <Button Content="Guardar" Width="700" Height="60"
                        Background="DarkBlue"
                        Foreground="Beige" />
            </StackPanel>
        </StackPanel>
    </Grid>

</Page>