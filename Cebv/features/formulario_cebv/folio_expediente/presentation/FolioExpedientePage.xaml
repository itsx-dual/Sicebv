<Page x:Class="Cebv.features.formulario_cebv.folio_expediente.presentation.FolioExpedientePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignWidth="Auto"
      d:DesignHeight="Auto"
      mc:Ignorable="d"
      Title="FolioExpedientePage">

    <Page.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="Padding" Value="16" />
            <Setter Property="Background" Value="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ui:ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
    </Page.Resources>


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height=".5*" />
        </Grid.RowDefinitions>
        <ui:TextBlock Grid.Row="0" Text="{StaticResource FolioExpedienteTitle}" FontTypography="TitleLarge" />

        <!-- TODO: Poner campos bloqueados de Estado, municipio, numero de personas en el mismo evento y la fecha de desaparicion -->

        <StackPanel Grid.Row="1" Margin="10">

            <StackPanel IsEnabled="False"
                        HorizontalAlignment="Left"
                        MaxWidth="400"
                        Margin="10 10 10 25">
                <ui:TextBlock Text="FOLIO CEBV:" />
                <ui:TextBox Text="EJEMPLO-FOLIO-CEBV-123" />
            </StackPanel>


            <StackPanel Margin="5 5 5 25" IsEnabled="False">
                <WrapPanel Margin="0 0 0 15">
                    <StackPanel MinWidth="250" Margin="5">
                        <ui:TextBlock Text="ESTADO:" />
                        <ui:TextBox Text="" IsEnabled="False" />
                    </StackPanel>

                    <StackPanel MinWidth="250" Margin="5">
                        <ui:TextBlock Text="MUNICIPIO:" />
                        <ui:TextBox Text="" IsEnabled="False" />
                    </StackPanel>

                    <StackPanel MinWidth="250" Margin="5">
                        <ui:TextBlock Text="NUMERO DE PERSONAS EN EL MISMO EVENTO:" />
                        <ui:TextBox Text="" IsEnabled="False" />
                    </StackPanel>
                </WrapPanel>

                <WrapPanel>
                    <StackPanel MinWidth="250" Margin="5">
                        <ui:TextBlock Text="FECHA DE DESAPARICION:" />
                        <ui:TextBox Text="" IsEnabled="False" />
                    </StackPanel>

                    <StackPanel MinWidth="250" Margin="5">
                        <ui:TextBlock Text="ZONA DE DESAPARICION:" />
                        <ui:TextBox Text="" IsEnabled="False" />
                    </StackPanel>

                    <StackPanel MinWidth="250" Margin="5">
                        <ui:TextBlock Text="TERMINACIÓN DE LA ENTIDAD:" />
                        <ui:TextBox Text="" IsEnabled="False" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>
            
            <!-- Información del reporte -->
            <ui:TextBlock Text="Información del reporte" FontTypography="Title" Margin="10" />
            <Border Margin="0 0 0 25">
                <WrapPanel Margin="5">
                    <StackPanel MinWidth="250" Margin="0 0 25 0">
                        <ui:TextBlock Text="TIPO DE FOLIO: *" />
                        <ComboBox DisplayMemberPath="Nombre"
                                  SelectedItem="{Binding TipoReporte}"
                                  ItemsSource="{Binding TiposReportes }" />
                    </StackPanel>

                    <StackPanel MinWidth="200" Margin="0 0 25 0">
                        <ui:TextBlock Text="TIPO DE DESAPARICIÓN:" />
                        <ComboBox>
                            <ComboBoxItem Content="Único" />
                            <ComboBoxItem Content="Múltiple" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel MinWidth="250" Margin="0 0 25 0">
                        <ui:TextBlock Text="NOMBRE DE QUIÉN ASIGNÓ FOLIO:" />
                        <ui:TextBox Text="Nombre Apellido1 Apellido2" IsEnabled="False" />
                    </StackPanel>


                    <ui:Button Margin="0 15 0 0"
                               Content="Generar Folio"
                               HorizontalAlignment="Right"
                               Icon="{ui:SymbolIcon Pen24}"
                               VerticalAlignment="Stretch"
                               Appearance="Primary" />

                </WrapPanel>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <ui:Button Grid.Row="2"
                   Command="{Binding GuardarReporteCommand}"
                   Content="{StaticResource GuardarContinuar}"
                   Icon="{ui:SymbolIcon Save24}"
                   Margin="10"
                   HorizontalAlignment="Stretch"
                   Appearance="Primary" />
    </Grid>
</Page>